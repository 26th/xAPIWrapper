    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "doxstrap": "~0.0.5",
    "grunt": "^0.4.5",
    "grunt-babel": "^6.0.0",
    "grunt-bump": "0.0.16",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-uglify": "~0.2.2",
